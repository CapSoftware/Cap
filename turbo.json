{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    ".env"
  ],
  "globalEnv": [
    "*"
  ],
  "tasks": {
    "build": {
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "!src-tauri/**",
        "!node_modules/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:web:docker": {
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "!src-tauri/**",
        "!node_modules/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:web": {
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "!src-tauri/**",
        "!node_modules/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "cache": false
    },
    "docker:up": {
      "cache": false,
      "persistent": true
    },
    "docker:stop": {
      "cache": false
    },
    "docker:clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "db:push",
        "db:generate"
      ],
      "cache": false,
      "persistent": true
    }
  }
}