{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "globalDotEnv": [
    ".env"
  ],
  "pipeline": {
    "build": {
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "!src-tauri/**",
        "!node_modules/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "cache": false
    },
    "docker:up": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": [
        "docker:up"
      ]
    },
    "db:push": {
      "cache": false,
      "dependsOn": [
        "docker:up",
        "db:generate"
      ]
    },
    "dev": {
      "dependsOn": [
        "docker:up",
        "db:push",
        "db:generate"
      ],
      "cache": false,
      "persistent": true
    }
  }
}