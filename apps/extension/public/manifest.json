{
	"manifest_version": 3,
	"name": "Cap Recorder",
	"version": "0.0.1",
	"action": {
		"default_title": "Cap",
		"default_popup": "popup.html"
	},
	"permissions": ["storage", "identity", "scripting", "activeTab", "windows"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"web_accessible_resources": [
		{
			"resources": ["camera.html", "assets/*"],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	}
}
