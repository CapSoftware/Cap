{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "next dev -p 3001",
    "beforeBuildCommand": "next build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3001"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "macOS": {
      "entitlements": "App.entitlements"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible",
    "resources": ["icons/tray-default-icon.png", "icons/tray-stop-icon.png"],
    "copyright": "Â© Cap Software, Inc. 2024."
  },
  "productName": "Cap",
  "version": "0.2.9",
  "identifier": "so.cap.desktop",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlFRDMyMDE5MDZEMDk4RTEKUldUaG1OQUdHU0RUbm44YWgxNVlkRjBMZU8yOHB5N0kyY01NZDJTeXNOb09Zdlc2Um81UVFKcTAK",
      "endpoints": [
        "https://cap.so/api/releases/tauri/{{current_version}}/{{target}}/{{arch}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Cap",
        "label": "main",
        "url": "/",
        "width": 290,
        "height": 460,
        "maximized": false,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": false,
        "center": true,
        "decorations": false,
        "windowEffects": {
          "effects": ["underWindowBackground", "mica"],
          "radius": 16.0
        }
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "cap_main",
      "menuOnLeftClick": false,
      "iconPath": "icons/tray-default-icon.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": false
  }
}
