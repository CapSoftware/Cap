{
	"name": "@cap/database",
	"private": true,
	"type": "module",
	"types": "./index.ts",
	"main": "index.js",
	"scripts": {
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"db:check": "drizzle-kit check:mysql --config=drizzle.config.ts",
		"db:up": "drizzle-kit up:mysql --config=drizzle.config.ts",
		"db:drop": "drizzle-kit drop --config=drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=drizzle.config.ts",
		"db:check-integrity": "node scripts/check-migration-integrity.js",
		"drizzle-kit": "pnpm dotenv -e ../../.env drizzle-kit --config=drizzle.config.ts",
		"build": "tsdown"
	},
	"dependencies": {
		"@cap/env": "workspace:*",
		"@cap/web-domain": "workspace:*",
		"@effect/sql-mysql2": "^0.47.0",
		"@kubiks/otel-drizzle": "^2.1.0",
		"@mattrax/mysql-planetscale": "^0.0.3",
		"@paralleldrive/cuid2": "^2.2.2",
		"@planetscale/database": "^1.19.0",
		"drizzle-orm": "0.44.6",
		"dub": "^0.64.0",
		"effect": "^3.18.4",
		"mysql2": "^3.15.2",
		"nanoid": "^5.0.4"
	},
	"devDependencies": {
		"@cap/ui": "workspace:*",
		"@cap/utils": "workspace:*",
		"dotenv-cli": "latest",
		"drizzle-kit": "0.31.0",
		"tsconfig": "workspace:*",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": "20"
	},
	"exports": {
		".": "./index.ts",
		"./auth/auth-options": "./auth/auth-options.ts",
		"./auth/session": "./auth/session.ts",
		"./schema": "./schema.ts",
		"./crypto": "./crypto.ts",
		"./helpers": "./helpers.ts",
		"./types": "./types/index.ts"
	}
}
