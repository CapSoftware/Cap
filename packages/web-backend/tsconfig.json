{
  "extends": "../config/base.tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "composite": true,
    "outDir": "dist",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "references": [{ "path": "../web-domain" }, { "path": "../database" }]
}
